<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFolderActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/folderNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="@string/folder_new_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/folderNameView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/folder_location"
        app:layout_constraintBottom_toTopOf="@+id/addLocation"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/folderNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="New Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addLocation"
        app:layout_constraintStart_toStartOf="@+id/folderNameView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:onClick="saveFolder"
        android:text="@string/folder_save_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLocation" />

    <TextView
        android:id="@+id/addLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="313dp"
        android:hint="@string/folder_add_location"
        app:layout_constraintBottom_toTopOf="@+id/buttonSave"
        app:layout_constraintEnd_toStartOf="@+id/add_location_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/folderNameEdit" />

    <ImageView
        android:id="@+id/add_location_btn"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginEnd="45dp"
        android:onClick="setLocation"
        app:layout_constraintBottom_toBottomOf="@+id/addLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addLocation"
        app:layout_constraintTop_toTopOf="@+id/addLocation"
        app:srcCompat="@drawable/next" />

</android.support.constraint.ConstraintLayout>